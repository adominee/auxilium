extends layout
include components/csrf

block content
  form(action=`/goal/${goal.goalId}?edit=1`, method="post").my-5
    +csrf(csrfToken)
    .form-group.row
      label(for="inputName").col-sm-2.col-form-label.text-center 目標名
      .col-sm-10
        input(type="text" name="goalName" id="inputName" value=goal.goalName required).form-control
    .form-group.row
      label(for="inputDate").col-sm-2.col-form-label.text-center 締め切り日時
      .col-sm-10
        input(type="date" name="deadline" value=goal.formattedDeadline).form-control
    .form-group.row
      button(type="submit").btn.btn-primary.col-sm-2 目標を編集